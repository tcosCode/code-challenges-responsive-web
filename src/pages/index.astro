---
import Layout from "@src/layouts/Layout.astro";
import Header from "@components/Header.astro";
import Hero from "@components/Hero.astro";
import Projects from "@components/Projects.astro";

import backgroundColor from "@src/assets/background.svg";
import backgroundImage from "@src/assets/background_image.svg";
---

<Layout>
  <img id="bg-image" src={backgroundImage.src} alt="" fetchpriority="high" />
  <img id="bg-color" src={backgroundColor.src} alt="" fetchpriority="high" />
  <Header />
  <main class="container">
    <Hero />
    <Projects />
  </main>
</Layout>

<style>
  /* Layout */
  .container {
    max-width: 1200px;
    height: 100%;
    margin: 0 auto;
    padding-inline: clamp(var(--spacing-sm), 3vw, var(--spacing-md));
    padding-bottom: 2rem;
  }

  #bg-color {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -2;
    opacity: 0.6;
  }
</style>
