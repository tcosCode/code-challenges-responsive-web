---
import logo from "@src/assets/logo.webp";
import home from "@public/home.svg";
---

<header>
  <nav>
    <a href="/" class="home slide-top">
      <img src={home.src} alt="Home" />
    </a>
    <div class="logo">
      <img src={logo.src} alt="Logo" />
    </div>
  </nav>
</header>

<style>
  header {
    padding: 2rem 3rem;
    position: relative;
    width: max-content;
  }

  .home {
    display: flex;
    width: max-content;
    height: auto;
    background-color: white;
    border-radius: 50%;
    padding: 3px;
  }

  .home:hover {
    animation: stop;
  }

  .home img {
    width: 20px;
    height: 20px;
  }

  .logo {
    opacity: 0;
    visibility: hidden;
    margin-top: 5px;
    transition:
      opacity 0.6s ease-out,
      visibility 0.6s ease-out;
  }

  .logo img {
    width: 100px;
    height: auto;
    border-radius: 5px;
  }

  .home:hover + .logo {
    opacity: 1;
    visibility: visible;
    animation: fade-in-top 0.6s ease-out both;
  }

  .slide-top {
    -webkit-animation: slide-top 0.5s ease-in-out infinite alternate both;
    animation: slide-top 0.5s ease-in-out infinite alternate both;
  }

  /* ----------------------------------------------
