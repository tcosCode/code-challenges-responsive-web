---
import github from "@src/assets/github.svg";
---

<header>
  <div data-tooltip="Code in Github!">
    <a href="https://github.com/tcosCode/code-challenges-responsive-web" target="_blank">
      <img src={github.src} alt="Github Logo" />
    </a>
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: flex-end;
    padding: 2rem 3rem;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.2rem;
    border: 1px solid rgb(213, 212, 212);
    border-radius: 5px;
    transition: background-color 0.2s ease-in-out;
  }

  img {
    width: 24px;
    height: 24px;
  }

  div {
    position: relative;
  }

  div::after {
    --scale: 0;
    content: attr(data-tooltip);
    margin-top: 3px;
    position: absolute;
    top: 100%;
    right: 0;
    width: max-content;
    padding: 0.2rem 0.7rem;
    background-color: var(--gray);
    color: var(--font-color-light);
    border-radius: 3px;
    font-size: var(--font-size-sm);
    font-weight: 500;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
    transform: scale(var(--scale));
    transition: transform 0.1s ease-in-out;
    transform-origin: top right;
  }

  div:hover::after {
    --scale: 1;
  }

  /* Extend the hover area with an invisible space using ::before */
  div::before {
    content: "";
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 3px;
    pointer-events: auto;
    background-color: transparent;
  }
</style>
